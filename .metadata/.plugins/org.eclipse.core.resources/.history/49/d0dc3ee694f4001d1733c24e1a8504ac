package com.citibank.citibankservicediscoveryapp;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.netflix.eureka.server.EnableEurekaServer;

@SpringBootApplication
@EnableEurekaServer // enables this application to act as service-discvoery
public class CitibankServiceDiscoveryAppApplication {

	public static void main(String[] args) {
		SpringApplication.run(CitibankServiceDiscoveryAppApplication.class, args);
	}

}
